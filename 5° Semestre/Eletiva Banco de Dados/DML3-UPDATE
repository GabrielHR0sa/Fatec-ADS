-- DML - UPDATE
USE CONSTRUTORA2;

UPDATE PROJETO SET VALOR=1000;

-- UTILIZANDO CLAUSULA WHERE 
UPDATE PROJETO SET VALOR=5000 WHERE DATA_INICIO>='2024-01-01';

-- ATUALIZA VALOR E CÓDIGO DO FUNCIONÁRIO GERENTE
UPDATE PROJETO SET VALOR=6550.99, COD_FUNC_GER=2 WHERE DATA_INICIO>='2024-01-01';

-- ATUALIZA VALOR , CÓDIGO DO FUNCIONÁRIO GERENTE E DATA_TERMINO
UPDATE PROJETO SET VALOR=6550.99, COD_FUNC_GER=2, DATA_TERMINO=GETDATE()
WHERE DATA_INICIO>='2024-01-01';

-- AUMENTE O VALOR DOS PROJETOS EM 15%, ALTERE O COD DO FUNCIONARIO GERENTE PARA 1
-- E A DATA DE TERMINO PARA NULL, SOMENTE PARA OS PROJETOS COM DATA DE TÉRMINO PREENCHIDA
-- E QUE TENHAM CÓDIGO DE GERENTE DIFERENTE DE 1
--UPDATE PROJETO SET VALOR=VALOR+VALOR*15/100
UPDATE PROJETO SET VALOR=VALOR*1.15, COD_FUNC_GER=1, DATA_TERMINO=NULL
WHERE DATA_TERMINO IS NOT NULL AND COD_FUNC_GER!=1;



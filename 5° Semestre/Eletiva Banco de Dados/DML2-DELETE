-- DML - DELETE;

USE CONSTRUTORA2;

-- REMOVE TODOS OS REGISTROS DA TABELA
DELETE FROM FUNCIONARIO;
DELETE FROM DEPENDENTE;

-- UTILIZANDO A CLAUSULA WHERE PARA FILTRAR OS REGISTROS A SEREM EXCLUIDOS
DELETE FROM FUNCIONARIO WHERE CODIGO=1;

-- UTILIZANDO CONDIÇÕES COMPOSTAS NMA CLÁUSULA WHERE
DELETE FROM FUNCIONARIO WHERE CIDADE='TAQUARITINGA' AND UF='SP' AND ATIVO=0;

-- TRABALHANDO COM FAIXA DE DATAS - UTILIZANDO CONDIÇÃO COMPOSTA
DELETE FROM PROJETO WHERE DATA_INICIO>='2024-01-01' AND DATA_INICIO<='2024-02-29';

-- TRABALHANDO COM FAIXA DE DATAS - UTILIZANDO PREDICADO BETWEEN
DELETE FROM PROJETO WHERE DATA_INICIO BETWEEN '2024-01-01' AND '2024-02-29';

-- EXCLUIR TODOS OS PROJETOS INICIADOS ENTRE OS ANOS DE 2021 E 2023
DELETE FROM PROJETO WHERE DATA_INICIO>='2021-01-01' AND DATA_INICIO<='2023-12-31';

DELETE FROM PROJETO WHERE DATA_INICIO BETWEEN '2021-01-01' AND '2023-12-31';

DELETE FROM PROJETO WHERE YEAR(DATA_INICIO)>=2021 AND YEAR(DATA_INICIO)<=2023;

DELETE FROM PROJETO WHERE YEAR(DATA_INICIO) BETWEEN 2021 AND 2023;


SELECT * FROM FUNCIONARIO WHERE CIDADE='TAQUARITINGA' AND UF='SP' AND ATIVO=0;